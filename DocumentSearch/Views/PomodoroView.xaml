                                     FontFamily="Segoe UI"
                                     FontSize="18"
                                     FontWeight="SemiBold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     TextWrapping="NoWrap"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
