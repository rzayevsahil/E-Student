<Window x:Class="DocumentSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentSearch"
        xmlns:vm="clr-namespace:DocumentSearch.ViewModels"
        mc:Ignorable="d"
        Title="E-Student" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Menu -->
        <Border Grid.Column="0" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,1,0" 
                Background="#F8F9FA">
            <StackPanel Margin="0">
                <!-- Logo/Header -->
                <Border Background="#ffffff" 
                        Padding="0"
                        Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <!-- Logo (Logo dosyasÄ± varsa gÃ¶ster) -->
                        <Image x:Name="LogoImage"
                               Width="100" 
                               Height="100" 
                               Margin="0,0,0,0"
                               Stretch="Uniform"
                               Visibility="Collapsed"/>
                        <!-- E-Student Text -->
                        <!--<TextBlock Text="E-Student" 
                                   FontSize="22" 
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   VerticalAlignment="Center"/>-->
                    </StackPanel>
                </Border>

                <!-- Menu Items -->
                <StackPanel>
                    <Button Content="ðŸ“„ Belge Arama" 
                            Command="{Binding NavigateToDocumentSearchCommand}"
                            Margin="10,5"
                            Padding="15,12"
                            HorizontalContentAlignment="Left">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#333"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedMenuItem}" Value="DocumentSearch">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                        <Setter Property="Foreground" Value="#2196F3"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="ðŸ… Pomodoro" 
                            Command="{Binding NavigateToPomodoroCommand}"
                            Margin="10,5"
                            Padding="15,12"
                            HorizontalContentAlignment="Left">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#333"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedMenuItem}" Value="Pomodoro">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                        <Setter Property="Foreground" Value="#2196F3"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- GÃ¼ncelleme Butonu (Sadece gÃ¼ncelleme varsa gÃ¶ster) -->
                    <Button Content="{Binding UpdateButtonText}" 
                            Command="{Binding CheckForUpdatesCommand}"
                            Margin="10,20,10,5"
                            Padding="15,12"
                            HorizontalContentAlignment="Left"
                            Foreground="{Binding UpdateButtonForeground}"
                            Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E8F5E9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" 
                      HorizontalAlignment="Stretch" 
                      Background="#E0E0E0"/>

        <!-- Content Area -->
        <ContentControl Grid.Column="2" 
                        Content="{Binding CurrentView}"
                        Margin="0"/>
    </Grid>
</Window>
