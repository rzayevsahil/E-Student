<UserControl x:Class="DocumentSearch.Views.DocumentSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DocumentSearch.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Belge Ä°Ã§erik Arama UygulamasÄ±" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Dosya YÃ¼kle" 
                    Command="{Binding LoadFilesCommand}"
                    Padding="15,5"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <TextBlock Text="{Binding StatusMessage}" 
                       VerticalAlignment="Center" 
                       Margin="10,0,0,0"
                       FontSize="12"
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Documents List -->
            <Border Grid.Column="0" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    Background="White"
                    CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="YÃ¼klenen Dosyalar" 
                               FontWeight="Bold" 
                               Padding="10"
                               Background="#F5F5F5"/>
                    
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Documents}"
                             Margin="5"
                             MouseDoubleClick="DocumentListBox_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5" Cursor="Hand">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Dosya adÄ± -->
                                    <TextBlock Grid.Column="0" Grid.Row="0"
                                               Text="{Binding FileName}" 
                                               FontWeight="SemiBold"
                                               TextWrapping="Wrap"
                                               Margin="0,0,5,0"
                                               VerticalAlignment="Center"/>
                                    
                                    <!-- X butonu - sabit konumda, tÃ¼m satÄ±rlarda aynÄ± hizada -->
                                    <Button Grid.Column="1" Grid.Row="0"
                                            Grid.RowSpan="3"
                                            Content="âœ•" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Width="25"
                                            Height="25"
                                            Padding="0"
                                            FontSize="12"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="Red"
                                            Cursor="Hand"
                                            Click="RemoveDocument_Click"
                                            ToolTip="DosyayÄ± kaldÄ±r"
                                            Margin="0,0,0,0"/>
                                    
                                    <!-- Dosya uzantÄ±sÄ± -->
                                    <TextBlock Grid.Column="0" Grid.Row="1"
                                               Text="{Binding FileExtension, StringFormat='{}{0} dosyasÄ±'}" 
                                               FontSize="10" 
                                               Foreground="Gray"
                                               Margin="0,2,0,0"/>
                                    
                                    <!-- Ã‡ift tÄ±klama mesajÄ± -->
                                    <TextBlock Grid.Column="0" Grid.Row="2"
                                               Text="ðŸ“„ Ã‡ift tÄ±klayarak aÃ§"
                                               FontSize="9"
                                               Foreground="#2196F3"
                                               Margin="0,3,0,0"
                                               Opacity="0.8"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                          HorizontalAlignment="Stretch" 
                          Background="#E0E0E0"/>

            <!-- Right Panel - Search and Results -->
            <Grid Grid.Column="2" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <Border Grid.Row="0" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        Background="White"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Arama" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="18"
                                 Padding="5"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1"
                                 VerticalContentAlignment="Center"
                                 MinHeight="60"
                                 Height="60">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="3"
                                                        MinHeight="{TemplateBinding MinHeight}">
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                  Margin="{TemplateBinding Padding}"
                                                                  VerticalAlignment="Center"
                                                                  HorizontalAlignment="Stretch"
                                                                  VerticalScrollBarVisibility="Disabled"
                                                                  HorizontalScrollBarVisibility="Disabled"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <TextBlock Text="YazdÄ±kÃ§a otomatik arama yapÄ±lÄ±r" 
                                   FontSize="12" 
                                   Foreground="Gray"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Results -->
                <Border Grid.Row="1" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        Background="White"
                        CornerRadius="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                   Text="{Binding SearchResults.Count, StringFormat='Arama SonuÃ§larÄ± ({0})'}" 
                                   FontWeight="Bold" 
                                   Padding="10"
                                   Background="#F5F5F5"/>
                        
                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding SearchResults}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  SelectionMode="Single"
                                  Margin="5"
                                  MouseDoubleClick="SearchResultsDataGrid_MouseDoubleClick">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Dosya" 
                                                    Binding="{Binding DocumentName}" 
                                                    Width="*"/>
                                <DataGridTextColumn Header="Sayfa" 
                                                    Binding="{Binding PageNumber, StringFormat='{}{0}'}" 
                                                    Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding PageNumber}" Value="0">
                                                    <Setter Property="Text" Value="-"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <!--<Border Grid.Row="3" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0"
                Padding="10,5"
                Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="11" 
                       Foreground="Gray"/>
        </Border>-->
    </Grid>
</UserControl>

