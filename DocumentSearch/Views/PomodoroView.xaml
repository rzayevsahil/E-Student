                Background="White"
                CornerRadius="15"
                Padding="40"
                Margin="0,0,0,30"
                HorizontalAlignment="Center">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="{Binding CurrentPhase}" 
